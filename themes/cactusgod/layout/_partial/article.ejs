<div class="post">
  <!-- Title -->
  <h2 class="post-title">
    <% if (index){ %>
      <a class="highlight" href="<%- config.root %><%- item.path %>">
        <%- item.title %>&nbsp;
      </a>
    <% } else { %>
      <%- item.title %>
    <% } %>
  </h2>
  <p class="post-date">
    <%= item.date.format(config.date_format) %>
  </p>
  <% if (item.excerpt && index){ %>
    <p><%- item.excerpt %></p>
  <% } else { %>
    <%- item.content %>
  <% } %>
</div>
