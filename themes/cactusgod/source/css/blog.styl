@import "./grid.styl"
@import "./type.styl"
@import "./arrangement.styl"
@import "./tubs.styl"
@import "./dynamics.styl"

svg :not(text),
.no-user-select {
  user-select: none;
}
.container {
  position: relative
}

.pager {
  display: flex;
  flex-direction: row;
  padding: 0;
  margin: 0;
  gap: 30px;

  li {
    list-style: none;
    padding: 0;
    margin: 0;
    text-transform: uppercase;
  }
}

.pager-left {
  text-align: left;
  flex: 1;
}

.pager-right {
  text-align: right;
  flex: 1;
}